{
    "publisher": "wenbo-zhou",
    "name": "sf-query-tools",
    "displayName": "SF Query Tools",
    "description": "Salesforce Query Tool helps you to write better query",
    "version": "0.1.2",
    "author": {
        "name": "Wenbo Zhou",
        "email": "zwb1988@hotmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zwb1988/vscode-sf-query-tools.git"
    },
    "bugs": {
        "url": "https://github.com/zwb1988/vscode-sf-query-tools/issues"
    },
    "engines": {
        "vscode": "^1.66.0"
    },
    "preview": true,
    "categories": [
        "Other"
    ],
    "keywords": [
        "Salesforce",
        "SOQL",
        "Query",
        "Plan"
    ],
    "icon": "resources/sf_query_tools.png",
    "galleryBanner": {
        "color": "#EEEEEE",
        "theme": "light"
    },
    "activationEvents": [
        "onCommand:sftb.soqlanalyze"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "zwb-sftool-soql-plan",
                    "title": "SOQL Tools",
                    "icon": "resources/sf_query_tools.png"
                }
            ]
        },
        "views": {
            "zwb-sftool-soql-plan": [
                {
                    "id": "zwb-sftool-soql-plan-entry",
                    "name": "SOQL Execution Plan",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "sftb.soqlanalyze",
                "title": "SF Query Tool: Scan SOQL in the current file"
            }
        ],
        "configuration": {
            "title": "SF Query Tool Configuration",
            "properties": {
                "sfQueryTool.apiVersion": {
                    "type": "string",
                    "default": "56.0",
                    "description": "Salesforce API Version"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "copyfiles": "copyfiles -u 1 ./src/soqlplan/media/** ./out",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package-list": "vsce ls",
        "package": "vsce package"
    },
    "dependencies": {
        "axios": "1.2.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.66.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5",
        "@vscode/test-electron": "^2.1.3",
        "vsce": "^2.15.0",
        "copyfiles": "^2.4.1"
    }
}
